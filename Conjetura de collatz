#include  "stdlib.h"
#include  "stdio.h"

int main(){
int numero;
	printf("Ingrese el Numero:");
	scanf ("%d", & numero);
	printf("%d", numero);
	while(numero != 1) {
		if(numero % 2 == 0){
			numero = numero/2;
		}
		else {
		numero = (numero*3)+1;
			}
		printf(", %d", numero);
    }	
	return 0;	
}
