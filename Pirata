#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include <math.h>
#include <string.h>


void inicializarTablero(){
    
}


void dibujarTablero(int arr[][0], int n){
    for(int i = 0; i < n; i++){
     for(int j = 0; j < n; j++){
       arr[i][j] = 0;
       printf("%d", arr[i][j]);
    }
     printf("\n");
    }
}


int main(){
    srand(time(NULL));  
    int n;
    printf("Ingrese el tamaÃ±o del tablero:");
    scanf("%d", &n);
    int arr[0][0];
    dibujarTablero(arr, n);
    return 0;
}
 
