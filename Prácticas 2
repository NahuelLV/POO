#include <stdio.h>
#include <stdlib.h>

int main (void) {
    int ejercicio;
    printf("ingrese que ejercicio quiere: ");
    scanf("%d", &ejercicio);
    switch (ejercicio){
        case 1:
        int s = 87; 
        for(int i = 0; i <= s; i++){
            if(i + (i + 1) + (i + 2) == s){
            printf("Los numeros %d, %d y %d dan %d", i, (i+1),(i+2), s);
            }
        }
        break;
        
        case 2: 
        float a, b, c;
        printf("Ingrese los valores: ");
        printf("\n Valor 1:");
        scanf("%f", &a);
        printf("Valor 2:");
        scanf("%f", &b);
        printf("Valor 3:");
        scanf("%f", &c);
        double promedio= (a+b+c) / 3.00;
        printf("El valor promedio es: %.2f ", promedio);
        break;
        
        case 3:
        int pos;
        printf("Ingrese el valor: ")
        scanf("%f", &pos);
        
        }
    }
