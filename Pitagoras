#include  "stdlib.h"	
#include  "stdio.h"

int main(){
    int a;
    int b;
    int c;
    int f1;
    int f2;
    printf("Pitagoricas:\n");
	printf("(a, b, c)\n\n");
	    for(a = 1; a <= 500; a++) {
		    for(b = a + 1; b <= 500; b++) {
			    for(c = b + 1; c <= 500; c++) {
                   f1 = (b * b) + (a * a);
				    f2 = c * c;
                   if(f1 == f2 && c > a && c > b) {
					printf("(%d, %d, %d)\n", a, b, c);
					}
				}
			}
		}
	return 0;
	}
